{
  "general": {
    "schema": {
      "type": "object",
      "properties": {
        "server": {},
        "timeout": {}
      },
      "additionalProperties": false
    },
    "default": {}
  },
  "general.server": {
    "schema": {
      "type": "string"
    }
  },
  "general.timeout": {
    "default": 1e4,
    "schema": {
      "type": "integer"
    }
  },
  "task": {
    "schema": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string"
        },
        "server": {
          "type": "string",
          "pattern": "^[\\w-.+]+://"
        },
        "path": {
          "type": "string",
          "pattern": "^/"
        },
        "body": {}
      },
      "patternProperties": {
        "^url\\..+": {},
        "^query\\..+": {},
        "^headers\\.[^A-Z]+": {}
      },
      "additionalProperties": false
    },
    "default": {}
  }
}
